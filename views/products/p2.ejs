<%- include("../partials/header.ejs") %>

<link rel="stylesheet" href="/css/p2.css">

<body>

  <%- include("../partials/navbar.ejs") %>
  
    <div id="space-between"></div>
    <div id="p-top-cont">
        <div id="p-filter-bar">
            <h1><%= product.brand.brand_name %></h1> 
            <h1>></h1>
            <h1><%= product.category.category_name %></h1>
            <h1>></h1>
            <h1><%= product.product_name %></h1>
        </div>
        <div id="p-pic">
            <img src="https://a.cdnsbn.com/images/English/detail_SaleFiesta8offAug21_1170_1.jpg" />
        </div>
        <div id="p-info">
            <div id="p-info-left">
                <div id="p-info-left-img">
                    <img src="<%= product.product_image %>" />
                </div>
                <div id="p-info-left-zoom">
                    <h5>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-zoom-in" viewBox="0 0 16 16">
                            <path fill-rule="evenodd"
                                d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z" />
                            <path
                                d="M10.344 11.742c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1 6.538 6.538 0 0 1-1.398 1.4z" />
                            <path fill-rule="evenodd"
                                d="M6.5 3a.5.5 0 0 1 .5.5V6h2.5a.5.5 0 0 1 0 1H7v2.5a.5.5 0 0 1-1 0V7H3.5a.5.5 0 0 1 0-1H6V3.5a.5.5 0 0 1 .5-.5z" />
                        </svg>
                        Rollover to Zoom
                    </h5>
                </div>
                <div id="p-info-left-mimg">
                    <div id="p-info-left-mimg-top">
                        <div>
                            <img src="<%= product.product_image %>" />
                        </div>
                        <div>
                            <img src="<%= product.product_image %>" />
                        </div>
                        <div>
                            <img src="<%= product.product_image %>" />
                        </div>
                    </div>
                </div>
                <div id="p-info-left-share">
                    <h1>
                        Share this product:
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-facebook" viewBox="0 0 16 16">
                            <path
                                d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z" />
                        </svg>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-twitter" viewBox="0 0 16 16">
                            <path
                                d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z" />
                        </svg>
                        <i class="fa fa-pinterest" style="font-size: 19px"></i>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-envelope" viewBox="0 0 16 16">
                            <path
                                d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2zm13 2.383-4.758 2.855L15 11.114v-5.73zm-.034 6.878L9.271 8.82 8 9.583 6.728 8.82l-5.694 3.44A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.739zM1 11.114l4.758-2.876L1 5.383v5.73z" />
                        </svg>
                    </h1>
                </div>
            </div>
            <div id="p-info-right">
                <div id="p-info-right-title">
                    <h1><%= product.brand.brand_name %></h1>
                    <h4><%= product.product_name %></h4>
                    
                    <h7><%= product.sizes[0].size_name %></h7>
                </div>
                <div id="p-info-right-sizebox">
                    <div>
                        <h1>50ml/1.</h1>
                        <h2>7oz</h2>
                    </div>
                    <div>
                        <h1>118ml/</h1>
                        <h2>4oz</h2>
                    </div>
                    <div>
                        <h1>140ml/</h1>
                        <h2>6.5oz</h2>
                    </div>
                </div>
                <div id="p-info-right-price">
                    <div id="p-info-right-price-topbar">
                        <div>
                            <h1>Rs.</h1>
                        </div>
                        <div>
                            <h1><%=product.price %></h1>
                        </div>
                        <div>
                            <h1>.00</h1>
                        </div>
                    </div>
                    <div>
                        <h1>MRP:</h1>
                        <h1>Rs.3,527.50</h1>
                        <h1>Save: 10%</h1>
                    </div>
                </div>
                <div id="p-info-right-buttons">
                    <div>
                        <label for="p-Quantity"></label>
                        <select name="p-Q" id="p-Quantity">
                            <option value="one">1</option>
                            <option value="two">2</option>
                            <option value="three">3</option>
                            <option value="four">4</option>
                        </select>
                    </div>
                    <div>
                        <button>Add to bag</button>
                    </div>
                    <div>
                        <h1>78 sold in past 12 months</h1>
                    </div>
                </div>
                <div id="p-info-right-offer">
                    <h1>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-tag-fill" viewBox="0 0 16 16">
                            <path
                                d="M2 1a1 1 0 0 0-1 1v4.586a1 1 0 0 0 .293.707l7 7a1 1 0 0 0 1.414 0l4.586-4.586a1 1 0 0 0 0-1.414l-7-7A1 1 0 0 0 6.586 1H2zm4 3.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z" />
                        </svg>
                        Extra 8% Off
                    </h1>
                    <h1>
                        *Delivery of this product to your selected country has been
                        temporarily suspended.
                    </h1>
                </div>
                <div id="p-info-right-menubar">
                    <div>
                        <h1>PRODUCT DETAILS</h1>
                    </div>
                    <div>
                        <h1>REVIEWS</h1>
                    </div>
                    <div>
                        <h1>ADD TO WISHLIST</h1>
                    </div>
                    <div><button>Write a review</button></div>
                </div>
                <hr />
                <div id="p-info-right-info">
                  <% product.product_detail.forEach(function (product) { %>
                    <li><%= product %></li>
                  <% }) %>
                </div>
            </div>
        </div>
    </div>
    <!-- ...............................footer start............................. -->
    <%- include("../partials/footer.ejs") %>
  <!-- ........................footer Ends......................... -->
</body>
</html>