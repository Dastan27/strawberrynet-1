    <!-- .....................SignUp/Login......................... -->
    <div id="myModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <div id="register">
                <div class="rectangle">
                    <div class="button">
                        <button id="sign" onclick="signIn()">Sign In</button>
                        <button id="new" onclick="signUp()">New Here?</button>
                    </div>
                    <hr />
                    <div class="input">
                        <input type="text" placeholder="FirstName" id="take_first" /><br />
                        <input type="text" placeholder="LastName" id="take_last" /><br />
                        <input type="text" placeholder="Email address" id="take_email" /><br />
                        <input type="password" placeholder="Password" id="take_password" /><br />
                        <p>
                            Please enter a minimum of 8 characters,including at least 1
                            letter and 1 number
                        </p>
                        <input type="password" placeholder="Re-enter your Password" id="take_password1" />
                        <p>
                            By creating your account,you agree to our privacy & Terms &
                            conditions
                        </p>
                    </div>
                    <div class="checkbox">
                        <input type="checkbox" id="checkbox1" name="checkbox" value="checkbox" />
                        <label for="checkbox1">Subscribe to our exclusive email offers</label>
                    </div>
                    <div class="submit">
                        <button id="save_value">REGISTER</button>
                    </div>
                </div>
            </div>
            <div id="login" style="display: none">
                <div class="rectangle">
                    <div class="button">
                        <div class="button">
                            <button id="sign" onclick="signIn()">Sign In</button>
                            <button id="new" onclick="signUp()">New Here?</button>
                        </div>
                    </div>
                    <hr />
                    <div class="input">
                        <input type="text" placeholder="Email address" id="email" /><br />
                        <input type="text" placeholder="Password" id="pwd" /><br />
                    </div>
                    <div class="forget">
                        <a href="#">Forget Password</a>
                    </div>
                    <div class="submit">
                        <button id="logIn">SIGN IN</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
